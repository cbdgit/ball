<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:layout_below="@+id/bottom_img_shadow" >

    <ImageView
        android:id="@+id/bottom_img_image"
        android:layout_width="58dp"
        android:layout_height="63dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:button="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/bottom_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/bottom_btn_previous"
        android:layout_toRightOf="@+id/bottom_img_image"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/bottom_tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bottom_tv_title"
        android:layout_below="@+id/bottom_tv_title"
        android:layout_marginTop="2dp"
        android:textColor="#808080"
        android:textSize="12sp" />

    <Button
        android:id="@+id/bottom_btn_next"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:background="@drawable/video_next_btn_style" />

    <Button
        android:id="@+id/bottom_btn_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/bottom_btn_next"
        android:background="@drawable/video_pause_btn_style" />

    <Button
        android:id="@+id/bottom_btn_previous"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/bottom_btn_play"
        android:background="@drawable/video_pre_btn_style" />

</RelativeLayout>